unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm2 = class(TForm)
    Label1: TLabel;
    Mproduto: TMemo;
    Mcusto: TMemo;
    Mvenda: TMemo;
    btmresult: TButton;
    Mresultado: TMemo;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    procedure btmresultClick(Sender: TObject);
  private
   FxcontadorProduto: string;
   FxcontadorCusto,   FxcontadorVenda,  FxcontadorResultado : double;
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

procedure TForm2.btmresultClick(Sender: TObject);
  var
    xvenda, xcusto, xresultado : currency;
    xproduto : string;

  begin
    xproduto := inputbox('Informar','Informe o produto','');
    xcusto := strtoint(inputbox('Informar','Informe o preço de custo','  '));
    xvenda := strtoint(inputbox('Informar','Informe o valor de venda','  '));
    xresultado:= strtoint(inputbox('Informar','Informe o resultado','  '));

    Mproduto.lines.add(xproduto);
    Mcusto.lines.add(currtostr(xcusto));
    Mvenda.lines.add(currtostr(xvenda));
    Mresultado.lines.add (currtostr(xresultado));




  end;

end.
